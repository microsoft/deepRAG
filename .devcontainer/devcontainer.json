{
	"image": "mcr.microsoft.com/devcontainers/universal:2",
	"features": {
		"ghcr.io/devcontainers/features/python": {
			"version": "3.11"
		}
	},
	"initializeCommand": "pip install poetry -U && poetry config virtualenvs.in-project true && poetry lock --no-update && poetry install",
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-python.pylint",
				"GitHub.copilot",
				"DavidAnson.vscode-markdownlint",
				"EditorConfig.EditorConfig",
				"ms-azuretools.vscode-bicep",
				"ms-dotnettools.dotnet-interactive-vscode"
			]
		}
	}
}