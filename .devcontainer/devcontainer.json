{
	"image": "mcr.microsoft.com/devcontainers/universal:2",
	"features": {
		"ghcr.io/devcontainers/features/python": {
			"version": "3.11"
		}
	},
	"postCreateCommand": "pip install -U langchain-cli && pip install poetry && poetry config virtualenvs.in-project true && poetry install -C src",
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-python.pylint",
				"GitHub.copilot",
				"DavidAnson.vscode-markdownlint",
				"EditorConfig.EditorConfig",
				"ms-azuretools.vscode-bicep",
				"ms-dotnettools.dotnet-interactive-vscode"
			]
		}
	}
}