{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Api",
            "type": "debugpy",
            "request": "launch",
            "module": "main"
        },
        {
            "name": "App",
            "type": "debugpy",
            "request": "launch",
            "module": "streamlit",
            "cwd": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/.env",
            "args": [
                "run",
                "${cwd}/src/app/app.py",
                "--server.port",
                "5000"
            ]
        }
    ],
    "compounds": [
        {
            "name": "Server/Client",
            "configurations": [
                "App",
                "Api"
            ]
        }
    ]
}